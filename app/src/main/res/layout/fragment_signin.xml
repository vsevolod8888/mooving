<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    android:background="@color/allert">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonOkRegistration"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Ok"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNeedRegistration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonCancelSignIn"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassport" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCancelSignIn"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/purple_200"
        android:text="Отмена"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNeedRegistration"
        app:layout_constraintEnd_toStartOf="@+id/buttonOkRegistration"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassport" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonNeedRegistration"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Регистрация"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonOkRegistration" />

    <EditText
        android:id="@+id/editTextUserNameSignIn"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:hint="Имя пользователя"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextPassport"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextPassport"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:background="@color/white"

        android:gravity="center_horizontal"
        android:hint="Пароль"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonOkRegistration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUserNameSignIn" />

</androidx.constraintlayout.widget.ConstraintLayout>